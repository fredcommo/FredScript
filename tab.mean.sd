tab.mean.sd<-function(X,crit)
{

	max=0

	# compter les critères dans crit: =c
	c<-dim(crit)[2]
	
	# compter les variables dans X
	p<-dim(X)[2]

	for (i in 1:c){
	max=max+length(levels(crit[,i]))
	}
	res<-matrix(0,max,p+2)
	colnames(res)[3:(p+2)]<-colnames(X)
	colnames(res)[1:2]<-c("Critère","niveau")
	
	# sélectionner le critère
	index=1
	for (j in 1:c)
	{
		# compter les niveaux du critère: =l
		l<-length(levels(crit[,j]))
	
		# pour chaque niveau:
		for (k in 1:l)
		{
			tmp<-X[crit[,j]==levels(crit[,j])[k],]
			mu<- signif(mean(tmp,na.rm=T),4)
			ns<-dim(tmp)[1]
			ci<- signif(qt(0.975,ns)*sqrt(sd(tmp,na.rm=T)/ns),3)
			res[index,3:(p+2)]=paste(mu,ci,sep=" +/-")
			res[index,1]<-colnames(crit)[j]
			res[index,2]<-levels(crit[,j])[k]
			index=index+1
		}
	}
	res<-as.data.frame(res)
	res
}
